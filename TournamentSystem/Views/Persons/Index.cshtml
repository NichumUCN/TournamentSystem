@model IEnumerable<TournamentSystem.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.PersonFirstName @item.PersonLastName @item.PersonNickname @item.PersonEmail.ToLower()
                @Html.ActionLink("Edit", "Edit", new {id = item.PersonEmail}) |
                @Html.ActionLink("Details", "Details", new {id = item.PersonEmail}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.PersonEmail})
            </td>
        </tr>
}
    </tbody>
</table>
